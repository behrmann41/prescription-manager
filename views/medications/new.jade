extends ../layout

block content
  .container
    h1= title
    include errors.jade
    .row
      .col-sm-5
        form.form-horizontal(action='/medications/new', method='POST')
          .form-group
            label.col-sm-2.label-control(for='name') Name:
            .col-sm-10
              input#name.form-control(type='text' name='name' placeholder='Medication Name' onfocus="this.placeholder = ''" onblur="this.placeholder = 'Medication Name'" required)
          .form-group
            .col-sm-offset-2.col-sm-9
              button.btn.btn-primary(type='submit') Add Medication
              a(style="margin-left: 15px;" href='/medications') Cancel
